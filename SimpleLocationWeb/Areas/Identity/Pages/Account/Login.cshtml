@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="container_register_form_image">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>Connectez-vous</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Mot de Passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
@*                                @Html.DisplayNameFor(m => m.Input.RememberMe)
*@                                Se souvenir de moi ?
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Se Connecter</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Vous avez oublié votre mot de passe ?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire en tant que nouveau client</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="container_register_image">
            <div class="register_image">
                @{
                    if (User.IsInRole("Manager") || User.IsInRole("Employee"))
                    {


                    }
                    else
                    {
                        <img src="/images/website/image_login.jpg" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" class="image_register" />
                    }
                }
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
