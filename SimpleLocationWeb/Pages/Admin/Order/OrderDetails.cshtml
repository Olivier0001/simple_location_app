@page
@model SimpleLocationWeb.Pages.Admin.Order.OrderDetailsModel

<form method="post">
    <div class="border p-4 ml-1 backgroundWhite mt-4">
        <div class="row pb-1">
            <div class="col-12 col-md-6">
                <p class="h2 text-primary">Details de la Location</p>
            </div>
            <div class="col-12 col-md-4 offset-md-2">
                <a asp-page="/Admin/Order/OrderList" class="btn btn-outline-primary form-control">Retour à la liste</a>
            </div>
        </div>
        <hr />
        <div class="row pt-2">
            <div class="col-lg-8 col-12" style="border-right:1px solid #bbb9b9">
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Nom
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.PickupName"  disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.PickupName
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Email
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.User.Email" disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.User.Email
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Téléphone
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.PhoneNumber" disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.PhoneNumber
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Prix Total
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.OrderTotal" disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.OrderTotal €
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Date de Début
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.PickUpDate" disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.PickUpDate.ToString("dd/MM/yyyy")
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Heure de Début
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.PickUpTime" type="time"  disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.PickUpTime.ToString("HH:mm")
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Date de Fin
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.PickDateOfReturn" disabled class="form-control"  />*@
                        @Model.OrderDetailVM.OrderHeader.PickDateOfReturn.ToString("dd/MM/yyyy")
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Heure de Fin
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.PickTimeOfReturn" type="time" disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.PickTimeOfReturn.ToString("HH:mm")
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Date de Création Location
                    </div>
                    <div class="col-md-9 col-12">
                        @*<input asp-for="OrderDetailVM.OrderHeader.OrderDate" disabled class="form-control" />*@
                        @Model.OrderDetailVM.OrderHeader.OrderDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
                <div class="form-group row py-1">
                    <div class="col-md-3 col-12 text-primary">
                        Commentaires
                    </div>
                    <div class="col-md-9 col-12">
                        @*<textarea asp-for="OrderDetailVM.OrderHeader.Comments" disabled class="form-control" rows="3"></textarea>*@
                        @Model.OrderDetailVM.OrderHeader.Comments
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-12">
                
                    <h4 class="d-flex justify-content-between align-content-center mb-3">
                        <span class="text-muted">Location:</span>
                        <span class="badge badge-secondary badge-pill">@Model.OrderDetailVM.OrderHeader.Id</span>
                    </h4>
                    <ul class="list-group mb-3">
                    @foreach (var detail in Model.OrderDetailVM.OrderDetails)
                    {
                            <li class="list-group-item d-flex justify-content-between">
                                <div>
                                    <h6 class="my-0">@detail.Name</h6>
                                    <small class="text-muted">Nombre de Jour : @detail.Count</small>
                                </div>
                            <span class="text-muted">@(Math.Round((detail.Price * detail.Count),2))</span>
                            </li>
                    }
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div>
                                <h6 class="text-info">Total (€)</h6>
                                <small class="text-info">@Model.OrderDetailVM.OrderHeader.OrderTotal</small>
                            </div>
                        </li>
                    </ul>

                    <button type="submit" class="btn btn-danger" style="width:150px">Supprimer</button>
                   

            </div>
        </div>
    </div>
</form>
