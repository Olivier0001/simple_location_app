@model SimpleLocationWeb.Pages.Customer.Home.CarDetailsModel

<form method="get" enctype="multipart/form-data">
    <input asp-for="Car.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2 container_car_details">
            <div class="col-9 container_details">
                <h2 class="text-primary pl-3">
                    Détails Voiture
                </h2>
                <hr />
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <h3>@Model.Car.Name</h3>
                </div>
                <br />
                <div class="mb-3">
                    <h5><label asp-for="Car.Description"></label>:</h5>
                    <p>@Model.Car.Description</p>
                </div>
                <div class="mb-3">
                    <h5><label asp-for="Car.Price">Prix</label>:</h5>
                    <p>@Model.Car.Price €</p>
                </div>
                <img src="@Model.Car.Image" class="image_car_details_mobile" />
            </div>
            <div class="col-3 container_image_car_details">
                @if (Model.Car.Image != null)
                {
                    <img src="@Model.Car.Image" width="100%" class="image_car_details" />
                }
            </div>

        </div>
        <a asp-page="Index" class="btn btn-primary" style="width:170px">Retour</a>
    </div>
</form>

