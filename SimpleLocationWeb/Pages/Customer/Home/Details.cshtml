@page
@model SimpleLocationWeb.Pages.Customer.Home.DetailsModel

<div class="">
    <form method="post">
        <input asp-for="LocationCarCart.CarId" hidden />
        <input asp-for="LocationCarCart.UserId" hidden />
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row">
                        <div class="col-12 col-md-6 pt-2">
                            <h1 class="text-primary">@Model.LocationCarCart.Car.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-end pt-2">
                            <h1 class="text-muted">@Model.LocationCarCart.Car.Price €</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">
                                    <div class="col-12">
                                        <span class="badge bg-warning text-light p-3 h3">@Model.LocationCarCart.Car.Category.Name</span>
                                        <span class="badge bg-dark p-3">@Model.LocationCarCart.Car.CarBrand.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.LocationCarCart.Car.Description)</p>
                                        <div class="form-floating my-2">
                                            <input asp-for="@Model.LocationCarCart.Count" class="form-control" aria-required="true" />
                                            <label asp-for="@Model.LocationCarCart.Count">Nombre de Jour</label>
                                            <span asp-validation-for="@Model.LocationCarCart.Count" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.LocationCarCart.Car.Image" width="100%" class="rounded" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-page="/Customer/Home/Index" class="btn btn-success btn-square form-control" style="height:50px;">Retour</a>
                        </div>
                        <div class="col-12 col-md-6">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Ajouter</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
