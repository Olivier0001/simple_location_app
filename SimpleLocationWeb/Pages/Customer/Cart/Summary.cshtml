@page
@using Microsoft.Extensions.Options
@model SimpleLocationWeb.Pages.Customer.Cart.SummaryModel
@inject IOptions<SimpleLocation.Utility.StripeSettings> Stripe

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0">
                    <div class="row">
                        <div class="col-6 pt-2 ">
                            <h3 class="text-white-50 summary">Résumé Location</h3>
                        </div>
                        <div class="col-6 text-end">
                            <a asp-page="Index" class="btn btn-outline-info btn-sm">Retour Panier</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-6 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Détails de la Location:</span>
                                    </h4>
                                </div>
                                <div asp-validation-summary="All"></div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Nom:</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.PickupName" class="form-control"/>
                                        <span asp-validation-for="OrderHeader.PickupName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Téléphone:</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.PhoneNumber" class="form-control" />
                                        <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Date de Début:</label>
                                    </div>
                                    <div class="col-9">
                                        <input value="" asp-for="OrderHeader.PickUpDate" type="date" class="form-control" />
                                        <span asp-validation-for="OrderHeader.PickUpDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Heure de Début:</label>
                                    </div>
                                    <div class="col-9">
                                        <input value="" asp-for="OrderHeader.PickUpTime" type="time" class="form-control" />
                                        <span asp-validation-for="OrderHeader.PickUpTime"  class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Date de Fin:</label>
                                    </div>
                                    <div class="col-9">
                                        <input value="" asp-for="OrderHeader.PickDateOfReturn" type="date" class="form-control" />
                                        <span asp-validation-for="OrderHeader.PickDateOfReturn" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Heure de Fin:</label>
                                    </div>
                                    <div class="col-9">
                                        <input value="" asp-for="OrderHeader.PickTimeOfReturn" type="time" class="form-control" />
                                        <span asp-validation-for="OrderHeader.PickTimeOfReturn" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Instruction complémentaire:</label>
                                    </div>
                                    <div class="col-9">
                                        <textarea asp-for="OrderHeader.Comments" style="height:100px;" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-5 offset-lg-1">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Résumé Location:</span>
                                </h4>
                                <ul class="list-group mb-3">
                                    @foreach(var detail in Model.LocationCarCartList){
                                        <li class="list-group-item d-flex justify-content-between">
                                            <div>
                                                <h6 class="my-0">@detail.Car.Name</h6>
                                                <small class="text-muted">Nombre de Jour: @detail.Count</small>
                                            </div>
                                            <span class="text-muted">@(detail.Car.Price * @detail.Count)</span>
                                        </li>
                                    }
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <div>
                                            <small class="text-muted">Total</small>
                                            <strong class="text-info">@Model.OrderHeader.OrderTotal€</strong>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-4 offset-md-8">
                            <button type="submit" id="btnPlaceOrder" value="Place Order" class="btn btn-success form-control">Payer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
        //<partial name="_Notification" />
    }
}


